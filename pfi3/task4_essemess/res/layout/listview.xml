<?xml version="1.0" encoding="utf-8"?>





<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent" 
    android:layout_height="match_parent" 
    android:background="#776688" 
    xmlns:android="http://schemas.android.com/apk/res/android">
   
  
   
    
    <TextView android:text="" android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="20dip"></TextView>
   
    <TextView android:text="messages" 
    android:id="@+id/textView1" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:textColor="#ffff" 
    android:textSize="20dip" 
    android:layout_marginLeft="5dip"
    android:layout_marginBottom="5dip"
    ></TextView>
    
    <ListView 
    android:id="@+id/listView1" 
    android:layout_height="250dip" 
    android:layout_width="match_parent">
    </ListView>
    
    
    
    
    <TextView android:text="" android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    
     
     
    
    <Button android:text="Update" 
    android:id="@+id/button1" 
    android:layout_width="match_parent" 
    android:layout_height="40dip" 
    android:bufferType="normal" 
    android:fadingEdge="horizontal" 
    android:fadingEdgeLength="40dip" 
    android:textColor="#ffff" 
    android:textSize="25dip"
    android:background="#776688"
    android:textStyle="bold" 
    android:layout_margin="10dip"  
    android:onClick="#ffff"
    ></Button>
    

    
</LinearLayout>


